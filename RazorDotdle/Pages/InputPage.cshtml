        z-index: 99999;
        position: absolute;
        width: 35px;
        right: calc((-35px / 2) - 0.7rem / 2);
        top: -21px;
    }    
    
    img#leftB-square {
        z-index: 99999;
        position: absolute;
        width: 35px;
        left: calc((-35px / 2) - 0.7rem / 2);
        bottom: -21px;
    }    
    
    img#rightB-square {
        z-index: 99999;
        position: absolute;
        width: 35px;
        right: calc((-35px / 2) - 0.7rem / 2);
        bottom: -21px;
    }

    #inputForm {
        padding: 1rem;
        display: flex;
        flex-direction: row;
        gap: 1rem;
        justify-content: flex-start;
        align-items: center;
    }

    button {
        border-radius: 0.5rem;
        background-color: #526E48;
        color: #fff;
        border-color: #3A3A3C;
    }

    div#newGameSection {
        display: flex;
        justify-content: flex-start;
        margin-top: 1rem;
        width: -webkit-fill-available;
        align-items: center;
    }

    button#newGameButton {
        width: 8rem;
    }

    input#InputModel_UserInput {
        width: auto;
        height: 2rem;
        text-align: center;
        font-size: large;
        font-style: normal;
    }

    div#wordSubmitted {
        background-color: #424242;
        height: auto;
        border-radius: 15px;
        border-style: solid;
        border-width: medium;
        border-color: var(--border-color);
        width: fit-content;
        font-size: 3rem;
        padding: 0.5rem 1rem 0.5rem 1rem;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-content: center;
        align-items: center;
        flex-direction: row;
        flex-wrap: nowrap;
    }

        div#wordSubmitted span {
            font-family: system-ui;
            text-transform: uppercase;
            padding-left: 1rem;
            border-style: solid;
            color: var(--white-color);
            border-width: medium;
            border-radius: 1rem;
            border-color: var(--border-color);
            padding-right: 1rem;
            display: inline;
            font-weight: bold;
        }


    .verde {
        background-color: var(--green-color);
    }

    .amarillo {
        background-color: var(--yellow-color);
    }

    .gris {
        background-color: var(--grey-color);
    }

</style>