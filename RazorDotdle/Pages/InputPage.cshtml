@page
@model RazorDotdle.Pages.InputPageModel
@{
    <head>
        <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    </head>

    <div id="MainContainer">
        <section id="MainGrid">
            <img id="dotdle-png" src="~/data/Dotdle.net.png" alt="Title PNG">
            <img id="left-square" src="~/data/Square.png" alt="Left Square">
            <img id="right-square" src="~/data/Square.png" alt="Right Square">
            <img id="leftB-square" src="~/data/Square.png" alt="LeftB Square">
            <img id="rightB-square" src="~/data/Square.png" alt="RightB Square">
        </section>
    
    </div>


    <h1>Guess the Word!</h1>
//    <p>The original word is: @Model.Word</p>
    <p>Description: @Model.Description</p>
    <hr />

    <form method="post" id="inputForm">
        <div>
            <input type="text" asp-for="InputModel.UserInput" class="input-field" maxlength="5" placeholder="Enter your word" />
        </div>
        <input type="hidden" asp-for="Word" />
        <input type="hidden" asp-for="Description" />
        <button type="submit" name="action" value="submit">Enter</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Input))
    {
        <div id="wordSubmitted">
            <section>
                @for (int i = 0; i < Model.Input.Length; i++)
                {
                    <span class="letter @Model.Results[i]">@Model.Input[i]</span>
                }
            </section>
        </div>
    }

    @if (Model.Next == true){
        <div id="newGameSection">
            <button type="button" id="newGameButton">New Game</button>
        </div>
    }

}

@section Scripts {
    <script>
        document.getElementById('newGameButton').addEventListener('click', function() {
            document.querySelector('.input-field').value = '';

            const form = document.getElementById('inputForm');
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'action';
            input.value = 'newgame';
            form.appendChild(input);
            form.submit();
        });
    </script>
}

<style>
    :root {
        --bg-color: #121213;
        --border-color: #3A3A3C;
        --white-color: #FFFFFF;
        --green-color: #6AAA64;
        --yellow-color: #B59F3B;
        --grey-color: #787C7E;
    }
    
    
    body {
        background-image: linear-gradient(180deg, #8BFF68, #04A409);
        font-family: 'Poppins';
        font-size: 22px;
        margin: 0;
    }

